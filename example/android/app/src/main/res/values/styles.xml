<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#000000</item>
    </style>

    <style name="RNAppTheme" parent="RNAppThemeBase">
        <item name="pt_annotation_toolbar_style">@style/MyAnnotationToolbarTheme</item>
        <item name="pt_preset_bar_style">@style/MyPresetBarTheme</item>
    </style>

    <style name="MyAnnotationToolbarTheme" parent="PTAnnotationToolbarTheme">
        <item name="colorBackgroundSecondary">@color/annot_toolbar_background_primary</item>
    </style>

    <style name="MyPresetBarTheme" parent="PTPresetBarTheme">
        <item name="selectedBackgroundColorSecondary">@color/annot_toolbar_selected_background</item>
    </style>

</resources>

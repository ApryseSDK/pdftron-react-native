<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RNAppTheme" parent="RNAppThemeBase">
    </style>

    <style name="RNAppThemeBase" parent="PDFTronAppTheme">
        <item name="search_toolbar">@style/RNSearchToolbarStyle</item>
        <item name="rect_presets">@array/custom_presets</item>
    </style>

    <style name="RNSearchToolbarStyle" parent="BaseSearchToolbarStyle">
        <item name="showSearchWeb">false</item>
    </style>

    <!--CustomPresetStyle1 is your default style for square in this sample. Modify this to your desired default style -->
    <style name="CustomPresetStyle1">
        <item name="annot_color">@android:color/holo_purple</item>
    </style>
    <style name="CustomPresetStyle2">
        <item name="annot_color">@android:color/black</item>
    </style>
    <style name="CustomPresetStyle3">
        <item name="annot_color">@android:color/white</item>
    </style>
    <style name="CustomPresetStyle4">
        <item name="annot_color">@android:color/holo_red_dark</item>
    </style>
</resources>
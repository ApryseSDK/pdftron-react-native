<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RNAppTheme" parent="RNAppThemeBase">
    </style>

    <style name="RNAppThemeBase" parent="PDFTronAppTheme">
        <item name="search_toolbar">@style/RNSearchToolbarStyle</item>
        <item name="rect_default_style">@style/ShapeProperty</item>
    </style>

    <style name="RNSearchToolbarStyle" parent="BaseSearchToolbarStyle">
        <item name="showSearchWeb">false</item>
    </style>

    <style name="ShapeProperty"  parent="AnnotPresetStyle4">
        <!-- border color -->
        <item name="annot_color">@android:color/black</item>
        <!-- fill color -->
        <item name="annot_fill_color">@android:color/holo_purple</item>
        <!-- thickness -->
        <item name="annot_thickness">1.0</item>
        <!-- opacity -->
        <item name="annot_opacity">1.0</item>
    </style>
</resources>
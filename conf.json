{
    "tags": {
        "allowUnknownTags": ["optional", "category", "hidesource"]
    },
    "plugins": ["plugins/markdown",
        "node_modules/better-docs/typescript",
        "node_modules/better-docs/category"
    ],
    "source": {
        "includePattern": "\\.(jsx|js|ts|tsx)$",
        "include": ["lib/", "index.ts"],
        "exclude": ["lib/index.js"]
    },
    "templates": {
        "systemName"            : "PDFTron React Native",
        "collapseSymbols"       : false,
        "hideAttribs"           : true,
        "detailsSameLine"       : true,
        "returnsInTable"        : true,
        "hideMethodSignature"   : true,
        "outputSourceFiles"     : true, 
	    "outputSourcePath"      : true,
        "linenums"              : true,
        "sourceRoot"            : "https://github.com/PDFTron/pdftron-react-native/blob/ts-master/",
        "renderConstantsFor"    : ["Config.js"],
        "sort"                  : "category",
        "categories"            : true

    },
    "opts": {
        "template": "./node_modules/ink-docstrap/template-algolia",
        "destination": "./docs/",
        "recurse": true,
        "readme": "DocHome.md"
    }
}